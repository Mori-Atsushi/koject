CREATE TABLE TodoTask (
    id          TEXT                      NOT NULL PRIMARY KEY,
    title       TEXT                      NOT NULL,
    isCompleted INTEGER AS kotlin.Boolean NOT NULL
);

insertTodoTask:
INSERT INTO TodoTask(id, title, isCompleted)
VALUES(?, ?, ?);

selectAllTodoTasks:
SELECT TodoTask.*
FROM TodoTask;

updateTodoTask:
UPDATE TodoTask
SET title = :title,
    isCompleted = :isCompleted
WHERE id = :id;
